<% include ../includes/header.ejs%>
    <div class="container">
        <form action="/articles/add" method="post" class="form-horizontal">
            <div class="form-group">
                <label for="title" class="col-sm-2 control-label">标题</label>
                <div class="col-sm-10">
                    <input type="text" value="" name="title" class="form-control" id="title" placeholder="标题"/>
                </div>
            </div>

            <div class="form-group">
                <label for="content" class="col-sm-2 control-label">正文</label>
                <div class="col-sm-10">
                    <textarea value="" class="form-control" name="content" cols="30" rows="10" id="content" placeholder="请输入内容"></textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">提交</button>
                    <button type="reset" class="btn btn-default">撤销</button>
                </div>
            </div>
        </form>
    </div>
